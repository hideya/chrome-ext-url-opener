{
  "manifest_version": 3,
  "name": "URL Opener",
  "version": "1.0",
  "description": "Opens a new browser window when the extension icon is clicked",
  "action": {
    "default_title": "Open New Window",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": ["dropzone.html", "dropzone.css", "dropzone.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
